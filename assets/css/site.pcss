/*! purgecss start ignore */

html {
  font-size: 17px;
}

.mr-2 {
    margin-right: 1rem;
}

/* site width fix */
@media (min-width: 1280px) {
    .xl\:w-5\/12 {
        width: 45.666667%;
    }
}
/* make site navbar stick around longer */
@media (min-width: 200px) {
    .xl\:block {
        display: block!important;
    }
}

/* footer breadcrumbs */
.breadcrumbs {
    padding: .25rem 1rem .25rem .75rem;
    border-radius: .25rem;
    margin-top: .5rem;
    margin-bottom: .5rem;
    margin-top: 0rem;
    list-style: none;
    background-color: var(--gray-100);
    width: 100%;
}

/* pagination styling */
.pagination {
  text-align: center;
  padding: .25rem 1rem .25rem .75rem;
  border-radius: .25rem;
  margin-top: 0rem;
  list-style: none;
  background-color: var(--gray-100);
  width: 100%;
  display: inline-block;
  margin-bottom: .25rem;
}
ul.pagination {
    display: flex;
    justify-content: center;
    list-style-type: none;
}
.pagination .page-item {
  padding: 0px 10px 0px 10px;
  margin-left: 0;
  margin-right: 0;
  color: var(--color-gray);
  font-size: 15px;
  line-height: 1.4;
  font-weight: 500;
  letter-spacing: -.01em;
  text-align: center;
  vertical-align: middle;
}

@import "components/color.pcss";
@import "components/header.pcss";
@import "components/content.pcss";
@import "components/article.pcss";

/*! purgecss end ignore */
